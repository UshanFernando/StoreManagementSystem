<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CheckoutController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #ef5350;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Total Payment" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="totalTF" prefHeight="36.0" prefWidth="280.0" style="-fx-background-color: #ffcdd2;" text="000.00" />
            <Label text="Payement Recieved by Customer" textFill="WHITE">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="receivedTF" prefHeight="36.0" prefWidth="280.0" style="-fx-background-color: #ffcdd2;" text="000.00" />
            <Label text="Balance" textFill="WHITE">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="balanceTF" prefHeight="36.0" prefWidth="280.0" style="-fx-background-color: #ffcdd2;" text="000.00" />
            <Button mnemonicParsing="false" onAction="#print" prefHeight="38.0" prefWidth="280.0" style="-fx-background-color: #536DFE;" text="Print Invoice" textFill="WHITE">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" height="11.47" radius="7.6175" />
               </effect>
            </Button>
            <Button mnemonicParsing="false" onAction="#finish" prefHeight="38.0" prefWidth="280.0" style="-fx-background-color: #66BB6A;" text="Complete Transcation" textFill="WHITE">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" height="11.47" radius="7.6175" />
               </effect>
            </Button>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#cancel" prefHeight="38.0" prefWidth="280.0" style="-fx-background-color: #d50000;" text="Cancel Transcation" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" height="11.47" radius="7.6175" />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Label alignment="CENTER" prefHeight="30.0" prefWidth="349.0" style="-fx-background-color: #c62828;" text="Checkout" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
         </padding>
      </Label>
   </top>
</BorderPane>
